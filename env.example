# JDA AI-Guided Project Portal - Environment Configuration
# Copy this file to .env and update values for your environment

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=dev_secret_key_change_in_production

# Database Configuration
DATABASE_URL=postgresql://jda_user:jda_dev_password@localhost:5432/jda_portal_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# AI Integration (Optional - leave blank to disable)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEFAULT_AI_MODEL=gpt-4
MAX_AI_TOKENS=4000

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME=

# External Integrations (Optional)
READ_AI_API_KEY=
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# Security & CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# File Upload Settings
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=.pdf,.docx,.xlsx,.pptx,.txt,.md

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=INFO

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 days 